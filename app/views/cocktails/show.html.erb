<div class="wrapper">
  <div class="container">
    <div class="header">
      <h3>
        <%= @cocktail.name.capitalize %>
      </h3>
      <%= cl_image_tag @cocktail.photo, height: 200, width: 250, corp: :fill %></div>
      <div class="card-form">
        <h4>Recipe:</h4>
        <ul>
          <% @cocktail.doses.each do |d| %>
          <li><p><%= d.description %> <%= d.ingredient.name %></p>
            <%= link_to 'Delete dose', dose_path(d.id), method: :delete, class: "link" %>
          </li>
          <% end %>
        </ul>
      </div>
      <div class="end-page">
        <%= link_to 'Back', cocktails_path, class: "btn btn-primary" %>
        <%= link_to 'Add dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
      </div>
    </div>
  </div>

